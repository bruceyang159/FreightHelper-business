<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windows_color"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/net_abnormal_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_net_abnormal" />

    <TextView
        android:id="@+id/net_abnormal_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="5%h"
        android:gravity="center_horizontal"
        app:layout_textSizePercent="@string/textsize_46px"
        android:text="网络连接失败,\n请检查您的网络!"
        android:textColor="@color/text_normal_color" />

    <TextView
        android:id="@+id/net_abnormal_refresh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        app:layout_heightPercent="7%sh"
        app:layout_widthPercent="30%sw"
        android:gravity="center"
        android:background="@drawable/selector_btn_green_bg"
        android:textColor="@drawable/selector_btn_green_text"
        app:layout_marginTopPercent="5%h"
        app:layout_textSizePercent="@string/textsize_46px"
        android:text="刷新重试" />

</com.zhy.android.percent.support.PercentLinearLayout>