<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/footer_load_more_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/footer_load_more_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="7.2%sh"
        app:layout_paddingTopPercent="1.8%sh"
        android:gravity="center"
        android:orientation="horizontal" >

        <ProgressBar
            android:id="@+id/footer_load_more_bar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="50%h"
            app:layout_marginRightPercent="5%sw"
            app:layout_widthPercent="50%h"
            android:indeterminateDrawable="@drawable/rotate_progress_animation"
            android:indeterminateDuration="1000"
            android:visibility="gone" />

        <TextView
            android:id="@+id/footer_load_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            app:layout_textSizePercent="@string/textsize_46px"
            android:text="加载更多"
            android:textColor="@color/text_highlight_color" />
    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>