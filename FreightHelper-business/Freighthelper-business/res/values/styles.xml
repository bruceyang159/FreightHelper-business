<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="GuideAppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/welcome</item>
    </style>

    <!-- 启动页面主题 -->
    <style name="WelcomeTheme" parent="android:Theme">
        <item name="android:windowBackground">@drawable/welcome</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <!-- 引导页面主题 -->
    <style name="GuideTheme" parent="android:Theme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- dialog主题 -->
    <style name="dialog_style" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- dialog无标题 -->
        <item name="android:background">@color/transparent</item>
        <!-- dialog去掉边框 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- dialog背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- dialog弹出后当前的 activity背景变暗 -->
        <item name="android:backgroundDimAmount">0.7</item>
    </style>
    
    <style name="PopupAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>
  <!-- dialog中语音提交的按钮-->
	<style name="dialog_sendvoice_submit">
	    <item name="android:textColor">@drawable/dialog_sendvoice_text_selector</item>
	     <item name="android:textSize">52px</item>
       
	    <item name="android:background">@null</item>
	</style>
	
	<!-- 有阴影的弹窗 -->
	 <declare-styleable name="ShadowLayout">
        <attr name="sl_cornerRadius" format="dimension"/>
        <attr name="sl_shadowRadius" format="dimension"/>
        <attr name="sl_shadowColor" format="color"/>
        <attr name="sl_dx" format="dimension"/>
        <attr name="sl_dy" format="dimension"/>
    </declare-styleable>
</resources>