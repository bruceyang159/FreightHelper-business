<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- 比例布局：自定义属性 -->
    <declare-styleable name="PercentLayout_Layout">
        <attr name="layout_widthPercent" format="string"/>
        <attr name="layout_heightPercent" format="string"/>
        <attr name="layout_marginPercent" format="string"/>
        <attr name="layout_marginLeftPercent" format="string"/>
        <attr name="layout_marginTopPercent" format="string"/>
        <attr name="layout_marginRightPercent" format="string"/>
        <attr name="layout_marginBottomPercent" format="string"/>
        <attr name="layout_marginStartPercent" format="string"/>
        <attr name="layout_marginEndPercent" format="string"/>
        <attr name="layout_textSizePercent" format="string"/>
        <attr name="layout_maxWidthPercent" format="string"/>
        <attr name="layout_maxHeightPercent" format="string"/>
        <attr name="layout_minWidthPercent" format="string"/>
        <attr name="layout_minHeightPercent" format="string"/>
        <attr name="layout_paddingPercent" format="string"/>
        <attr name="layout_paddingTopPercent" format="string"/>
        <attr name="layout_paddingBottomPercent" format="string"/>
        <attr name="layout_paddingLeftPercent" format="string"/>
        <attr name="layout_paddingRightPercent" format="string"/>
    </declare-styleable>
    
    <!-- 自定义页码 -->
    <declare-styleable name="CldCircleIndicator">
        <attr name="ci_width" format="dimension"/>
        <attr name="ci_height" format="dimension"/>
        <attr name="ci_margin" format="dimension"/>
        <attr name="ci_animator" format="reference"/>
        <attr name="ci_animator_reverse" format="reference"/>
        <attr name="ci_drawable" format="reference"/>
        <attr name="ci_drawable_unselected" format="reference"/>
    </declare-styleable>
    
    <!-- 自定义扇形圆弧 -->
    <declare-styleable name="ColorArcProgressBar">
        <attr name="background_color" format="color"/>      <!-- 背景圆弧颜色值 -->
        <attr name="background_width" format="dimension"/>  <!-- 背景圆弧的宽度 -->
        <attr name="progress_color_start" format="color"/>  <!-- 进度圆弧颜色值_start -->
        <attr name="progress_color_middle" format="color"/> <!-- 进度圆弧颜色值_middle -->
        <attr name="progress_color_end" format="color"/>    <!-- 进度圆弧颜色值_end -->
        <attr name="progress_width" format="dimension"/>    <!-- 进度圆弧的宽度 -->
        <attr name="diameter" format="integer"/>            <!-- 圆弧直径 -->
        <attr name="total_angle" format="integer"/>         <!-- 最大角度 -->
        <attr name="title_string" format="string"/>         <!-- 标题 -->
        <attr name="title_color" format="color"/>           <!-- 标题颜色值 -->
        <attr name="title_text_size" format="dimension" />  <!-- 标题字体大小 -->
        <attr name="value_string" format="string"/>         <!-- 显示值 -->
        <attr name="value_color" format="color"/>           <!-- 显示值颜色值 -->
        <attr name="value_text_size" format="dimension" />  <!-- 显示值字体大小 -->
        <attr name="max_value" format="float"/>             <!-- 进度最大值 -->
        <attr name="cur_value" format="float"/>             <!-- 进度当前值 -->
    </declare-styleable>
    
    <!-- 自定义圆形图片 -->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>
    
    <!-- 垂直型卡片 -->
    <declare-styleable name="VerticalCard">
        <attr name="vc_icon" format="reference"/>      <!-- icon图标 -->
        <attr name="vc_title" format="string"/>        <!-- 标题 -->
        <attr name="vc_content" format="string"/>      <!-- 内容 -->
        <attr name="vc_content_color" format="color"/> <!-- 内容文本颜色值 -->
        <attr name="vc_clickable" format="boolean"/>   <!-- 内容是否是可点击 -->
        <attr name="vc_alignRight" format="boolean"/>  <!-- 内容是否右对齐 -->
        <attr name="vc_hascontent" format="boolean"/>  <!-- 是否有内容 -->
        <attr name="vc_hasarrow" format="boolean"/>    <!-- 是否有箭头 -->
        <attr name="vc_arrowicon" format="reference"/> <!-- 箭头icon图标 -->
        <attr name="vc_dropable" format="boolean"/>    <!-- 是否可下拉 -->
        <attr name="vc_hasline" format="boolean"/>     <!-- 是否有间隔线 -->
        <attr name="vc_ismobile" format="boolean"/>    <!-- 内容是否是手机号 -->
        <attr name="vc_withstar" format="boolean"/>    <!-- 是否带星 -->
        <attr name="vc_paddingLeft" format="float"/>
    </declare-styleable>
    
    <!-- 自定义可下拉TextView -->
    <declare-styleable name="DropDownText">
        <attr name="ddt_title" format="string"/>        <!-- 标题 -->
        <attr name="ddt_dropable" format="boolean"/>    <!-- 是否可下拉 -->
        <attr name="ddt_bg_color" format="color"/>      <!-- 背景颜色值 -->
        <attr name="ddt_title_color" format="color"/>   <!-- 标题颜色值 -->
    </declare-styleable>
    
    <!-- 自定义方块卡片 -->
    <declare-styleable name="BoxCard">
        <attr name="bc_title" format="string"/>        <!-- 标题 -->
        <attr name="bc_num" format="string"/>          <!-- 数量 -->
        <attr name="bc_bg" format="reference"/>        <!-- 背景图 -->
    </declare-styleable>
    
    <!-- 车辆状态卡片 -->
    <declare-styleable name="CarStateCard">
        <attr name="csc_icon" format="reference"/>       <!-- icon图标 -->
        <attr name="csc_title" format="string"/>         <!-- 标题 -->
        <attr name="csc_content" format="string"/>       <!-- 内容 -->
        <attr name="csc_content_color" format="color"/>  <!-- 内容颜色值 -->
    </declare-styleable>
    
    <!-- 车厢温度卡片 -->
    <declare-styleable name="CarCompartTemp">
        <attr name="cct_title" format="string"/>         <!-- 标题 -->
        <attr name="cct_content" format="string"/>       <!-- 内容 -->
    </declare-styleable>
    
    <!-- 自定义饼状图 -->
    <declare-styleable name="PieView">
        <attr name="centerTextSize" format="dimension" />
        <attr name="dataTextSize" format="dimension" />
        <attr name="centerTextColor" format="color" />
        <attr name="dataTextColor" format="color" />
        <attr name="circleWidth" format="dimension" />
    </declare-styleable>
    
    <declare-styleable name="PullToZoomView">
        <attr name="headerView" format="reference" />
        <attr name="contentView" format="reference" />
        <attr name="zoomView" format="reference" />
        <attr name="isHeaderParallax" format="boolean" />
    </declare-styleable>
    
    <!-- 自定义右上角带小红点的TextView -->
    <declare-styleable name="RedDotTextView">
        <attr name="redDotVisibility">
            <enum name="visible" value="0"></enum>
            <enum name="invisible" value="4"></enum>
            <enum name="gone" value="8"></enum>
        </attr>
    </declare-styleable>
    
</resources>