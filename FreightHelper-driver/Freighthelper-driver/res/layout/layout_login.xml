<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 账号 -->

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        app:layout_heightPercent="@string/login_edit_heightPercent"
        app:layout_widthPercent="@string/login_edit_widthPercent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/login_edit_username_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            app:layout_heightPercent="40%h"
            app:layout_marginRightPercent="4%w"
            app:layout_widthPercent="40%h"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_account" />

        <EditText
            android:id="@+id/login_edit_username"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            app:layout_marginRightPercent="4%w"
            app:layout_textSizePercent="@string/textsize_46px"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/login_account_hint"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text_highlight_color"
            android:textColorHint="@color/text_normal_color"
            android:textCursorDrawable="@drawable/shape_edit_cursor" />

        <TextView
            android:id="@+id/login_edit_username_cancel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            app:layout_marginRightPercent="3%w"
            app:layout_heightPercent="30%h"
            app:layout_widthPercent="30%h"
            android:background="@drawable/selector_edit_cancel_bg"
            android:visibility="gone" />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        app:layout_widthPercent="@string/login_edit_widthPercent"
        android:background="#B5B5B5" />

    <!-- 密码 -->

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        app:layout_heightPercent="@string/login_edit_heightPercent"
        app:layout_widthPercent="@string/login_edit_widthPercent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/login_edit_pwd_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            app:layout_heightPercent="40%h"
            app:layout_marginRightPercent="4%w"
            app:layout_widthPercent="40%h"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_pwd" />

        <EditText
            android:id="@+id/login_edit_pwd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:layout_marginRightPercent="4%w"
            app:layout_textSizePercent="@string/textsize_46px"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/login_pwd_hint"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/text_highlight_color"
            android:textColorHint="@color/text_normal_color"
            android:textCursorDrawable="@drawable/shape_edit_cursor" />

        <TextView
            android:id="@+id/login_edit_pwd_cancel"
            android:layout_width="0dp"
            android:layout_height="0dp"
           android:layout_gravity="center_vertical"
            app:layout_heightPercent="30%h"
            app:layout_marginRightPercent="4%w"
            app:layout_widthPercent="30%h"
            android:background="@drawable/selector_edit_cancel_bg"
            android:visibility="gone" />

        <!-- 忘记密码 -->

        <TextView
            android:id="@+id/login_lost_pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_marginRightPercent="3%w"
            app:layout_textSizePercent="@string/textsize_46px"
            android:gravity="center_vertical"
            android:text="@string/login_lost_pwd"
            android:textColor="@color/main_color" />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        app:layout_widthPercent="@string/login_edit_widthPercent"
        android:background="#B5B5B5" />

    <!-- 登录 -->

    <Button
        android:id="@+id/login_btn_login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        app:layout_heightPercent="@string/login_btn_heightPercent"
        app:layout_marginTopPercent="8%h"
        app:layout_textSizePercent="@string/textsize_56px"
        app:layout_widthPercent="@string/login_btn_widthPercent"
        android:background="@drawable/selector_btn_green_bg"
        android:enabled="false"
        android:text="@string/login_login"
        android:textColor="@drawable/selector_btn_green_text" />

</com.zhy.android.percent.support.PercentLinearLayout>