<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/track_point_poi_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="5.78%sh"
        app:layout_widthPercent="6.2%sw"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        android:src="@drawable/icon_water_select" />

    <TextView
        android:id="@+id/track_point_poi_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/track_point_poi_img"
        android:layout_alignRight="@+id/track_point_poi_img"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="1.5%sw"
        android:gravity="center_horizontal"
        app:layout_textSizePercent="3.3%sw"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/track_point_poi_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/track_point_poi_img"
        app:layout_marginLeftPercent="2.5%sw"
        android:layout_alignTop="@+id/track_point_poi_img"
        android:layout_alignBottom="@+id/track_point_poi_img"
        app:layout_textSizePercent="@string/textsize_90px"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="@color/text_highlight_color"
        android:textStyle="bold" />

</com.zhy.android.percent.support.PercentRelativeLayout>