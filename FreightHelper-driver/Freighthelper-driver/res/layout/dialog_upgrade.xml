<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:layout_widthPercent="90%"
        android:background="@drawable/shape_prompt_dialog_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/update_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="9.45%"
            app:layout_textSizePercent="@string/textsize_50px"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/about_update_has_new_version"
            android:textColor="@color/main_color"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/windows_color" />

        <TextView
            android:id="@+id/update_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_paddingBottomPercent="10%"
            app:layout_paddingLeftPercent="10%"
            app:layout_paddingRightPercent="10%"
            app:layout_paddingTopPercent="10%"
            app:layout_textSizePercent="@string/textsize_48px"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:lineSpacingExtra="5dp"
            android:singleLine="false"
            android:text=""
            android:maxLines="6"
            android:textColor="@color/text_highlight_color"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/windows_color" />

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="9.45%"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/update_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:layout_textSizePercent="@string/textsize_50px"
                android:background="@drawable/selector_bth_white_bg"
                android:gravity="center"
                android:text="@string/dialog_no_need"
                android:textColor="@color/main_color"
                android:visibility="visible" />

            <View
                android:id="@+id/update_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/windows_color"
                android:visibility="visible" />

            <Button
                android:id="@+id/update_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:layout_textSizePercent="@string/textsize_50px"
                android:background="@drawable/selector_bth_white_bg"
                android:gravity="center"
                android:text="@string/dialog_update_now"
                android:textColor="@color/main_color" />
        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>