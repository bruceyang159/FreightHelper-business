<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    
    <TextView
        android:id="@+id/track_point_speed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="6.8%sh"
        app:layout_widthPercent="22%sw"
        app:layout_textSizePercent="@string/textsize_44px"
        android:background="@drawable/icon_track_speed"
        android:gravity="center"
        android:text=""
        android:textColor="@color/main_color"
        android:visibility="visible" />
    
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="22%sw"
        android:layout_toRightOf="@+id/track_point_speed"
        android:layout_alignTop="@+id/track_point_speed"
        android:layout_alignBottom="@+id/track_point_speed"
        app:layout_textSizePercent="@string/textsize_44px"
        android:gravity="center"
        android:text=""
        android:textColor="@color/main_color"
        android:visibility="visible" /> 
    

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/track_point_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/track_point_speed"
        app:layout_marginLeftPercent="18.5%sw"
        android:layout_alignParentBottom="true"
        app:layout_heightPercent="5.0%sh"
        app:layout_widthPercent="6.2%sw" >

        <ImageView
            android:id="@+id/track_point_img"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            app:layout_heightPercent="90%h"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/icon_water_select" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>